<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.trainingapp.controller.InstructorDashboardController"
            styleClass="root-bg"
            stylesheets="@style.css">

    <top>
        <ToolBar styleClass="toolbar">
            <Label text="Instructor Dashboard" styleClass="toolbar-title"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="Logout" onAction="#handleLogout" styleClass="ghost-btn"/>
        </ToolBar>
    </top>

    <center>
        <SplitPane dividerPositions="0.55">

            <!-- Left: Courses -->
            <VBox spacing="8" styleClass="panel">
                <padding>
                    <Insets top="12" right="12" bottom="12" left="12"/>
                </padding>

                <Label text="Courses" styleClass="section-title"/>
                <TableView fx:id="tblCourses">
                    <columns>
                        <TableColumn fx:id="colCid" text="ID" prefWidth="80"/>
                        <TableColumn fx:id="colTitle" text="Title" prefWidth="160"/>
                        <TableColumn fx:id="colInstr" text="Instructor" prefWidth="140"/>
                        <TableColumn fx:id="colDate" text="Date/Time" prefWidth="140"/>
                        <TableColumn fx:id="colLoc" text="Location" prefWidth="100"/>
                        <TableColumn fx:id="colCap" text="Cap" prefWidth="60"/>
                        <TableColumn fx:id="colEnrolled" text="Enrolled" prefWidth="80"/>
                    </columns>
                </TableView>
            </VBox>

            <!-- Right: Enrollments -->
            <VBox spacing="8" styleClass="panel">
                <padding>
                    <Insets top="12" right="12" bottom="12" left="12"/>
                </padding>

                <Label text="Enrollments (selected course)" styleClass="section-title"/>
                <TableView fx:id="tblEnrollments">
                    <columns>
                        <TableColumn fx:id="colPid" text="PID" prefWidth="80"/>
                        <TableColumn fx:id="colPname" text="Name" prefWidth="160"/>
                        <TableColumn fx:id="colDept" text="Dept" prefWidth="120"/>
                        <TableColumn fx:id="colEmail" text="Email" prefWidth="200"/>
                        <TableColumn fx:id="colStatus" text="Status" prefWidth="100"/>
                    </columns>
                </TableView>

                <HBox spacing="8" alignment="CENTER_LEFT">
                    <padding>
                        <Insets top="8" right="0" bottom="0" left="0"/>
                    </padding>

                    <Label text="Participant"/>
                    <ComboBox fx:id="cmbParticipant" prefWidth="220"/>
                    <Button text="Enroll" onAction="#handleEnroll" styleClass="primary-btn"/>
                    <Label text="Status"/>
                    <ComboBox fx:id="cmbStatus" prefWidth="160"/>
                    <Button text="Update" onAction="#handleUpdateStatus"/>
                </HBox>
            </VBox>

        </SplitPane>
    </center>
</BorderPane>
