<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.trainingapp.controller.InstructorDashboardController"
            styleClass="root-bg"
            stylesheets="@style.css">

    <!-- ====== TOP TOOLBAR ====== -->
    <top>
        <ToolBar styleClass="toolbar">
            <Label text="Instructor Dashboard" styleClass="toolbar-title"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="Logout" onAction="#handleLogout" styleClass="ghost-btn"/>
        </ToolBar>
    </top>

    <!-- ====== MAIN CONTENT ====== -->
    <center>
        <SplitPane dividerPositions="0.55" prefWidth="Infinity" prefHeight="Infinity">

            <!-- LEFT: Courses Panel -->
            <VBox spacing="10" styleClass="panel" VBox.vgrow="ALWAYS">
                <padding>
                    <Insets top="15" right="15" bottom="15" left="15"/>
                </padding>

                <Label text="Courses You Teach" styleClass="section-title"/>

                <TableView fx:id="tblCourses" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colCid" text="Course ID" prefWidth="100"/>
                        <TableColumn fx:id="colTitle" text="Title" prefWidth="200"/>
                        <TableColumn fx:id="colInstr" text="Instructor" prefWidth="140"/>
                        <TableColumn fx:id="colDate" text="Date/Time" prefWidth="160"/>
                        <TableColumn fx:id="colLoc" text="Location" prefWidth="120"/>
                        <TableColumn fx:id="colCap" text="Cap" prefWidth="80"/>
                        <TableColumn fx:id="colEnrolled" text="Enrolled" prefWidth="100"/>
                    </columns>
                </TableView>
            </VBox>

            <!-- RIGHT: Enrollments Panel -->
            <VBox spacing="10" styleClass="panel" VBox.vgrow="ALWAYS">
                <padding>
                    <Insets top="15" right="15" bottom="15" left="15"/>
                </padding>

                <Label text="Enrollments in Selected Course" styleClass="section-title"/>

                <TableView fx:id="tblEnrollments" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colPid" text="PID" prefWidth="80"/>
                        <TableColumn fx:id="colPname" text="Name" prefWidth="160"/>
                        <TableColumn fx:id="colDept" text="Dept" prefWidth="120"/>
                        <TableColumn fx:id="colEmail" text="Email" prefWidth="200"/>
                        <TableColumn fx:id="colStatus" text="Status" prefWidth="100"/>
                    </columns>
                </TableView>

                <!-- Bottom Controls (Added) -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <padding>
                        <Insets top="8" right="0" bottom="0" left="0"/>
                    </padding>

                    <Label text="Participant"/>
                    <ComboBox fx:id="cmbParticipant" prefWidth="220"/>

                    <Button text="Enroll" onAction="#handleEnroll" styleClass="primary-btn"/>

                    <Label text="Status"/>
                    <ComboBox fx:id="cmbStatus" prefWidth="160"/>

                    <Button text="Update" onAction="#handleUpdateStatus"/>
                </HBox>
            </VBox>

        </SplitPane>
    </center>
</BorderPane>
