<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.trainingapp.controller.LoginController"
            styleClass="root-bg"
            stylesheets="@style.css">

    <!-- ====== TOP TITLE ====== -->
    <top>
        <HBox alignment="CENTER">
            <children>
                <Label text="Training Enrollment Manager" styleClass="app-title"/>
            </children>
            <padding>
                <Insets top="40" right="24" bottom="20" left="24"/>
            </padding>
        </HBox>
    </top>

    <!-- ====== CENTER LOGIN CARD ====== -->
    <center>
        <StackPane alignment="CENTER">
            <children>
                <VBox spacing="20" alignment="CENTER" maxWidth="420" styleClass="login-card" VBox.vgrow="ALWAYS">
                    <children>
                        <Label text="Sign In" styleClass="login-heading"/>

                        <TextField fx:id="usernameField" promptText="Username or Email" maxWidth="320"/>
                        <PasswordField fx:id="passwordField" promptText="Password" maxWidth="320"/>

                        <Button text="Sign In" onAction="#handleLogin" styleClass="primary-btn" maxWidth="320"/>

                        <Label fx:id="message" styleClass="warn" wrapText="true" maxWidth="320"/>
                    </children>
                    <padding>
                        <Insets top="30" right="30" bottom="30" left="30"/>
                    </padding>
                </VBox>
            </children>
            <padding>
                <Insets top="30" right="24" bottom="30" left="24"/>
            </padding>
        </StackPane>
    </center>

    <!-- ====== BOTTOM FOOTER ====== -->
    <bottom>
        <HBox alignment="CENTER">
            <children>
                <Label text="© 2025 • Training Enrollment Manager" styleClass="login-footer"/>
            </children>
            <padding>
                <Insets top="16" right="16" bottom="24" left="16"/>
            </padding>
        </HBox>
    </bottom>
</BorderPane>
